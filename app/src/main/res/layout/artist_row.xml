<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/artist_row_margin">

    <ImageView
        android:id="@+id/list_row_image"
        android:layout_width="@dimen/artist_list_item_image_width"
        android:layout_height="@dimen/artist_list_item_image_height"
        android:layout_marginEnd="@dimen/artist_list_item_image_margin_right"
        android:layout_marginRight="@dimen/artist_list_item_image_margin_right" />

    <TextView
        android:id="@+id/list_row_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
